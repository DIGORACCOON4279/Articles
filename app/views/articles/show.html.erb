
<section class="sectionChoices">

  <div class="blockChoices">

      <h1 class="title">
        <%= @article.title %>
      </h1>

      <h2 class="subtitle">
        <%= @article.body %>
      </h2>

      <ul>
        <li><%= link_to "Edit", edit_article_path(@article), class:'link' %>✍</li>
        <li><%= link_to "Destroy", article_path(@article), class:'link', data:{
          turbo_method: :delete,
          turbo_confirm: "Are ya sure?"
          } %>❌</li>
        <li><%= link_to "Regresar index", root_path(@article), class:'link' %>✔</li>
      </ul>

  </div>

</section>
